{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist/preload",
    "rootDir": "./src/preload",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node10",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "src/preload/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
