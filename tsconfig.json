{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/renderer/*"]
    }
  },
  "include": [
    "src/main/**/*.ts",
    "src/preload/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/types",
    "src/**/*.d.ts"
  ]

}
